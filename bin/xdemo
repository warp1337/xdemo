# STD
import os
import time
import logging
import multiprocessing

# SELF
from xdemo.container.system import SystemInstance
from xdemo.parsing.yamlconfig import SystemConfig
from xdemo.connections.screenclient import ScreenPool
from xdemo.utilities.logreader import LogReader
from xdemo.connections.sshclient import ConnectionPool
from xdemo.launcher.systemlauncher import SystemLauncher

# LOGGING
from colorlog import ColoredFormatter

# FABRIC
from fabric.state import connections
from fabric.network import disconnect_all


if __name__ == "__main__":

    logger = logging.getLogger("xdemo")
    logger.setLevel(logging.INFO)
    ch = logging.StreamHandler()
    ch.setLevel(logging.INFO)
    formatter = logging.Formatter("%(asctime)s - %(name)s - %(levelname)s - %(message)s", "%H:%M:%S")
    formatter = ColoredFormatter(
        "%(asctime)s-%(log_color)s%(levelname)s-%(reset)s%(white)s%(message)s",
        datefmt="%H:%M:%S",
        reset=True,
        log_colors={
            'DEBUG': 'cyan',
            'INFO': 'blue',
            'WARNING': 'yellow',
            'ERROR': 'red',
            'CRITICAL': 'red'
        }
    )
    ch.setFormatter(formatter)
    logger.addHandler(ch)

    os.system("mkdir -p /tmp/xdemo/logs/")

    logger.info("[XDEMO START]")

    config = "/home/fl/repro_systems/xdemosandbox/etc/xdemo/systems/basic-example/linux-example.yaml"
    sc = SystemConfig(config, logger)
    si = SystemInstance(sc, logger)
    sp = ScreenPool(logger)
    sl = SystemLauncher(si, sp, logger)
    sl.mk_screen_sessions()
    sl.deploy_commands()

    time.sleep(5)

    sp.kill_all_screen_sessions()

    # cp = ConnectionPool(logger)
    #
    # cp.add_client_to_pool("thorium")
    # cp.send_cmd_to_connetion("thorium", "ls")
    # cp.send_cmd_to_connetion("thorium", "xterm", True)
    #
    # cp.close_all_connections()

    # sl = SystemLauncher(si, logger)
    #
    # task_ready_queue = multiprocessing.Queue()
    # p = multiprocessing.Process(target=sl.deploy_tasks, args=(task_ready_queue,))
    # p.start()
    #
    # while task_ready_queue.empty():
    #     time.sleep(0.05)
    #
    # logger.info("[deployer] deployed all tasks [OK]")
    #
    # time.sleep(5)
    #
    # sl.stop_all_tasks()
    #
    # p.join()
    #
    # for key in connections.keys():
    #     logger.debug(connections[key])
    #     connections[key].close()
    #
    # disconnect_all()

    logger.info("[XDEMO END]")

